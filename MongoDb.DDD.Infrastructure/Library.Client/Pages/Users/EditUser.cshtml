@page
@model EditUser
@{
    ViewData["Title"] = "Edit User";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<form method="post">
    <div class="form-group">
        <label for="name">Email name</label>
        <input name="name" id="name" class="form-control" type="text" asp-for="UserDto.Name" />
    </div>

    <div class="form-group">
        <label for="surname">User surname</label>
        <input name="surname" id="surname" class="form-control" type="text" asp-for="UserDto.Surname" />
    </div>

    <div class="form-group">
        <label for="emailAddress">Email address</label>
        <input name="email" type="email" class="form-control" id="email" asp-for="UserDto.Email" />
    </div>

    <div class="form-group">
        <label for="isBanned">Is banned</label>
        <input name="isBanned" type="checkbox" class="form-control" id="isBanned" asp-for="@Model.IsBanned" />
    </div>

    <button class="btn btn-primary" type="submit">Save user</button>
</form>