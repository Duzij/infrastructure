@page
@model EditBook
@{
    ViewData["Title"] = "Edit Book";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" id="title" class="form-control" type="text" asp-for="BookDetail.Title" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea  name="description" id="description" class="form-control"  type="text" asp-for="BookDetail.Description" cols="40" rows="5"></textarea>
    </div>
    <div class="form-group">
        <label for="authorId">Author</label>
        <select id="authorId" name="authorId" asp-items="Model.Authors"></select>
    </div>
    <button class="btn btn-primary" type="submit">Save book record</button>
</form>