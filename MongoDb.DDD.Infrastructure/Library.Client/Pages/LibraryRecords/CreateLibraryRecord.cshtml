@page
@model CreateLibraryRecord
@{
    ViewData["Title"] = "Create library record";
}
<h1>@ViewData["Title"]</h1>

<div class="form-group">
    <label for="title">Book</label>
    @foreach (var item in Model.Books)
    {
        <select name="bookId" asp-items="@Model.BookSelector"></select>

        <div class="form-group row">
            <label for="amountValue" class="col-2 col-form-label">Number of books</label>
            <div class="col-10">
                <input class="form-control" type="number" id="amountValue" asp-for="@item.Amount">
            </div>
        </div>
    }
    <form asp-page-handler="addBook" method="post">
        <button class="btn">Add book</button>
    </form>
</div>
<div class="form-group">
    <label for="title">User</label>
    <select name="userId" asp-items="@Model.Users"></select>
</div>

<form method="post">
    <button class="btn btn-primary" type="submit">Create book record</button>
</form>
