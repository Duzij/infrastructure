@page
@model EditAuthor
@{
    ViewData["Title"] = "Edit Author";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<form method="post">
    <div class="form-group">
        <label for="name">Email name</label>
        <input name="name" id="name" class="form-control" type="text" asp-for="AuthorDto.Name" />
    </div>

    <div class="form-group">
        <label for="surname">User surname</label>
        <input name="surname" id="surname" class="form-control" type="text" asp-for="AuthorDto.Surname" />
    </div>

    <button class="btn btn-primary" type="submit">Save author</button>
</form>